<h3>Bienvenue sur votre compte</h3>
<div class="row">
  <div class="col-md-2">
    <ul class="list-group">
        <li class="list-group-item">
            <a id="call" href="#" class="btn btn-default">
                <span class="glyphicon glyphicon-user"></span> My profile
            </a>
        </li>
    </ul>
  </div>
  <div class="col-md-10 accountPage">


        <div class="form-group">
            <label for="username" class="control-label">Name</label>
            <input type="text" class="form-control" id="username" name="username" placeholder="Name" data-error="This name is required" required>
            <div class="help-block with-errors"></div>
        </div>

        <div class="form-group">
            <label for="email" class="control-label">Email</label>
            <input type="email" class="form-control" id="email" placeholder="Email" name="email" data-error="This email is invalid" required>
            <div class="help-block with-errors"></div>
        </div>

        <div class="form-group">
            <label for="password" class="control-label">Password</label>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="password" data-minlength="6" class="form-control" name="password" id="password" placeholder="Password" required>
                        <div class="help-block">Minimum of 6 characters</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="password" class="form-control" id="confirm" data-match="#password" data-match-error="These password don't match ..." placeholder="Confirm password" required>
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
            </div>
        </div>
  </div>
</div>
