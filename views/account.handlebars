<h3>Bienvenue sur votre compte</h3>
<div class="row accountPage well">
    {{#if isConnected}}
        {{>uploadAvatar}}
    {{/if}}
  <div class="col-md-3">
      <div class="row">
        <div class="imageUser">
            <div align="center"><img  alt="User Pic" src="{{user.avatar}}" /></div>
        </div>
      </div>

      <div class="row">
          <div class="text-center">
                <a class="btn btn-default imageAvatar" href="#" data-toggle="modal" data-target="#upload-modal">Upload Avatar</a>
          </div>

      </div>
  </div>

  <div class="col-md-9 ">
        <form action="/account/update" method="post">
          <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="prenom">Pr√©nom:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control inputUpdate" id="name" name="name" value="{{user.name}}" placeholder="{{user.name}}" disabled="disabled">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="nom">Nom:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control inputUpdate" id="lastname" name="lastname" placeholder="{{user.lastname}}" value="{{user.lastname}}" disabled="disabled">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="username">Pseudo:</label>
            <div class="col-sm-10">
                <p class="form-control-static">{{user.username}}</p>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="bio">Bio:</label>
            <div class="col-sm-10">
                <textarea type="text" class="form-control inputUpdate" id="bio" name="bio" disabled="disabled">{{user.bio}}</textarea>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="email">Email:</label>
            <div class="col-sm-10">
                <p class="form-control-static">{{user.email}}</p>
            </div>
          </div>
          <a type="button" href="#" id="edit" class="btn btn-default">Edit</a>
          <button type="submit" class="btn btn-default inputUpdate" disabled="disabled">Submit</button>
        </form>
  </div>
</div>
