<div class="container chat_window">
    <div class="row">
        <div class="panel panel-primary active" id="sidebar-wrapper">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-comment"></span> Chat
                <a id="menu-close" href="#" class="btn btn-default btn-lg pull-right close"><i class="glyphicon glyphicon-triangle-right"></i></a>
                <a id="menu-toggle" href="#" class="btn btn-default btn-lg pull-right toggle" style="display: none"><i class="glyphicon glyphicon-triangle-left"></i></a>
            </div>
            <div class="panel-collapse" id="collapseOne">
                <div class="panel-body">
                    <ul class="sidebar-nav chat_messages">
                        <li class="right clearfix">
                            <div class="chat-body clearfix">
                                <div class="header">

                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="panel-footer">
                    <form action="" id="formChat">
                        <div class="input-group">
                            <input id="message_chat" type="text" class="form-control input-sm" placeholder="Type your message here..." autofocus/>
                            <span class="input-group-btn">
                                <button class="btn btn-warning btn-sm" id="btn-chat">
                                    Send
                                </button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#sidebar-wrapper").toggleClass("active");
        $("#menu-toggle").css('display','none');
    });
    $("#menu-close").click(function(e) {
        e.preventDefault();
        $("#sidebar-wrapper").toggleClass("active");
        $("#menu-toggle").css('display','block');
    });
    $(document).ready(function(){
        $('#btn-chat').attr('disabled',true);
        $('#message_chat').keyup(function(){
            if(!//.match($(this.val())))
                $('#btn-chat').attr('disabled', false);
            else
                $('#btn-chat').attr('disabled',true);
        })
    });
</script>