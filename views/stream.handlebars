<div class="row">
    <div class="col-md-2">
        <ul class="list-group">
            <li class="list-group-item">
                <a id="call" href="#" class="btn btn-success">
                    <span class="glyphicon glyphicon-play"></span> Start stream
                </a>
                <a id="terminate" href="#" class="btn btn-danger hidden">
                    <span class="glyphicon glyphicon-stop"></span> Stop stream
                </a>
            </li>
            <li class="list-group-item">
                <a id="share_screen" href="#" class="btn btn-warning">
                    <span class="glyphicon glyphicon-screenshot"></span> Share screen
                </a>
                <a id="terminateShare" href="#" class="btn btn-danger hidden">
                    <span class="glyphicon glyphicon-stop"></span> Stop share
                </a>
            </li>
            <li class="list-group-item">
                <a id="viewer" href="#" class="btn btn-primary">
                <span class="glyphicon glyphicon-user"></span> Join stream</a>
            </li>
        </ul>
    </div>
    <div class="col-md-7">
      <ul class="nav nav-tabs">
        <li id="streamTab"><a data-toggle="tab" href="#home">Video</a></li>
        <li id="shareScreenTab"><a data-toggle="tab" href="#menu1">Share screen</a></li>

      </ul>

      <div class="tab-content">
        <div id="home" class="tab-pane fade in active">
          <h3>Video</h3>
          <div id="videoBig" class="embed-responsive">
              <video id="video" class="video_share_screen" controls autoplay poster="public/img/webrtc.png"></video>
          </div>
        </div>
        <div id="menu1" class="tab-pane fade">
          <h3>Share screen</h3>
          <div id="videoBig" class="embed-responsive">
              <video id="videoShare" class="video_share_screen" controls autoplay poster="public/img/webrtc.png"></video>
          </div>
        </div>
      </div>

    </div>
</div>

<input type="hidden" value="{{user.username}}" id="inputUsername"/>
{{>chat}}
